# Love-OS: Awakening Index (AIx) Calculator
# ------------------------------------------
# This notebook calculates the "Spiritual KPI" based on behavioral and biometric logs.
# Input: Dummy data representing Impulse(I), Action(A), Subjective Confidence(q), etc.
# Output: Radar Chart of the Soul & Total AIx Score.

import numpy as np
import pandas as pd
import matplotlib.pyplot as plt
from scipy.stats import pearsonr

# --- 1. Data Simulation (Mocking the User Log) ---
np.random.seed(999)
n_steps = 1000
t = np.linspace(0, 100, n_steps)

# User State: "Awakening in Progress"
# As time goes on, the user gets better at sensing and syncing.
progress = np.linspace(0.2, 0.9, n_steps) 

# (C1) Coherence Data: I vs A
I = np.sin(t) + np.random.normal(0, 0.1, n_steps) # Divine Impulse
# Action A becomes closer to I as progress increases
noise_A = (1 - progress) * np.random.normal(0, 0.5, n_steps) 
A = I + noise_A

# (C2) Area Sensitivity Data: True Area vs Subjective Feeling
# True invisible accumulation
y_hidden = np.abs(np.sin(t * 0.5)) 
Area_accumulated = np.cumsum(y_hidden)
# User's feeling (q) becomes more correlated with Area derivative as they awake
q_feeling = y_hidden * progress + np.random.normal(0, 0.2, n_steps)

# (C4) Boundary/Heat Data
R = 1.0 - progress # Resistance drops over time
Heat = (I - A)**2 * R

# (C5) Synchronization Data (Kuramoto Order Parameter)
# Group sync (r) improves over time
r_group = progress * 0.8 + np.random.normal(0, 0.1, n_steps)
r_group = np.clip(r_group, 0, 1)


# --- 2. Metric Calculation Engine ---

def calculate_aix(I, A, q, y_hidden, Heat, r_group):
    
    # C1: Coherence (1 - Normalized Error)
    diff_sum = np.sum(np.abs(I - A))
    total_sum = np.sum(np.abs(I) + np.abs(A)) + 1e-6
    c1 = 1.0 - (diff_sum / total_sum)
    
    # C2: Area Sensitivity (Correlation between Feeling and Hidden Truth)
    # We look at the correlation of the *trend*
    if np.std(q) > 1e-6 and np.std(y_hidden) > 1e-6:
        c2, _ = pearsonr(q, y_hidden)
        c2 = max(0, c2) # Clip negative correlation
    else:
        c2 = 0.0
        
    # C3: Phase Sensitivity (Simulated for this demo)
    # Assuming user detected 80% of phase slips correctly
    c3 = 0.85 
    
    # C4: Boundary Control (1 - Normalized Heat)
    # Normalize heat to 0-1 scale based on theoretical max
    max_theoretical_heat = np.sum(2.0**2 * 1.0) # approx max
    current_heat = np.sum(Heat)
    c4 = 1.0 - np.clip(current_heat / (len(Heat)*0.5), 0, 1)
    
    # C5: Synchronization (Average Order Parameter)
    c5 = np.mean(r_group)
    
    return [c1, c2, c3, c4, c5]

# Calculate Scores
scores = calculate_aix(I, A, q_feeling, y_hidden, Heat, r_group)
labels = ['C1: Coherence', 'C2: Area Sense', 'C3: Phase Sense', 'C4: Boundary', 'C5: Sync Force']

# Weights (tuned for balanced evaluation)
weights = np.array([0.25, 0.2, 0.15, 0.2, 0.2])
AIx = np.dot(scores, weights)


# --- 3. Visualization (The Soul's Dashboard) ---

# Radar Chart Setup
angles = np.linspace(0, 2 * np.pi, len(labels), endpoint=False).tolist()
scores_radar = scores + [scores[0]] # Close the loop
angles += [angles[0]]

fig = plt.figure(figsize=(10, 6))
ax = fig.add_subplot(111, polar=True)

# Draw
ax.plot(angles, scores_radar, color='#FFD700', linewidth=2, linestyle='solid')
ax.fill(angles, scores_radar, color='#FFD700', alpha=0.25)

# Labels
ax.set_thetagrids(np.degrees(angles[:-1]), labels, fontsize=12)
ax.set_ylim(0, 1)
plt.title(f"Awakening Index (AIx) Diagnosis\nTotal Score: {AIx:.3f}", fontsize=16, color='white', backgroundcolor='black', pad=20)

# Interpretation
print("--- Love-OS Awakening Diagnosis ---")
print(f"Total AIx: {AIx:.3f} / 1.000")
print("-" * 30)
for lbl, scr in zip(labels, scores):
    grade = "S" if scr > 0.8 else "A" if scr > 0.6 else "B" if scr > 0.4 else "C"
    print(f"{lbl}: {scr:.2f} [{grade}]")
    
print("-" * 30)
if AIx > 0.8:
    print("Status: SUPERCONDUCTING (Awakened). You are operating primarily on the Imaginary Axis.")
elif AIx > 0.5:
    print("Status: TRANSITIONING. You sense the field, but resistance is still present.")
else:
    print("Status: SLEEP MODE. Focus on lowering resistance (C4) and listening to the silence (C2).")

plt.show()
